#: import Window kivy.core.window.Window

EditDetails:
<EditDetails>
    name: "edit_details"
    md_bg_color : [1,1,1,1]
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        MDCard :
            orientation: 'vertical'
            size_hint :(0.8,0.85)
            size: 400,900
            post_hint : {"center_x":.5, "center_y":.5}
            md_bg_color : [150/255,200/255,100/255,1]
            elevation :10
            padding : 20
            spacing : 0
            MDLabel:
                text : "UPDATE"
                font_style: 'Button'
                font_size: 50
                halign: "center"
                size_hint_y: None
                height: self.texture_size[1]
                padding_y:20
            MDTextField:
                id: name
                hint_text: 'Username'
                icon_right: "account"
                size_hint_x:None
                width: 320
                pos_hint: {'center_x':.5}
                font_size: 40
                required: True
            MDTextField:
                id: phone
                hint_text: 'Phone.No'
                icon_right: "phone"
                helper_text: "length must be 10"
                input_type: 'number'
                input_filter: 'int'
                helper_text_mode: "on_focus"
                size_hint_x:None
                width: 320
                pos_hint: {'center_x':.5}
                font_size: 40
            MDTextField:
                id: city
                hint_text: 'City'
                icon_right: "map"
                size_hint_x:None
                width: 320
                pos_hint: {'center_x':.5}
                font_size: 40
                required: True
            MDTextField:
                id: state
                hint_text: 'State'
                icon_right: "map"
                size_hint_x:None
                width: 320
                pos_hint: {'center_x':.5}
                font_size: 40
                required: True
            MDTextField:
                id: pin
                hint_text: 'Pin code'
                icon_right: "map"
                size_hint_x:None
                width: 320
                pos_hint: {'center_x':.5}
                font_size: 40
                required: True
            MDGridLayout:
                cols:2
                padding:[dp(69),dp(0),dp(0),dp(15)]
                MDTextField:
                    id: password
                    hint_text: "Enter Password"
                    helper_text: "must be at least 8 characters"
                    helper_text_mode: "on_focus"
                    password: True
                    size_hint_x:None
                    width: 320
                    pos_hint: {'center_x':.5}
                    font_size: 40
                    on_text: root.validate_password(self.text)
                MDIconButton:
                    icon: "eye-off"
                    pos_hint: {"center_y": .5}
                    pos: password.width - self.width + dp(8), 0
                    theme_text_color: "Hint"
                    on_release:
                        self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                        password.password = False if password.password is True else True
                MDTextField:
                    id: confirm_password
                    hint_text: "Re-Enter Password"
                    helper_text_mode: "persistent"
                    password: True
                    size_hint_x:None
                    width: 320
                    pos_hint: {'center_x':.5}
                    font_size: 40
                    on_text: root.validate_password(self.text)
                MDIconButton:
                    icon: "eye-off"
                    pos_hint: {"center_y": .5}
                    pos: confirm_password.width - self.width + dp(8), 0
                    theme_text_color: "Hint"
                    on_release:
                        self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                        confirm_password.password = False if confirm_password.password is True else True
            MDGridLayout:
                size_hint_y:.75
                cols:2
                padding:[dp(15),dp(20),dp(20),dp(35)]
                spacing:dp(10)
                MDFillRoundFlatButton:
                    id: submit
                    text: "Update"
                    size_hint: (0.4, None)
                    size: (320, 20)
                    pos_hint: {'center_x':.5}
                    md_bg_color:1,20/255,147/255,1
                    padding: 10
                    on_release:
                        root.UpdateData(name.text,phone.text,city.text,state.text,pin.text,password.text)
                MDFillRoundFlatButton:
                    text: "Back"
                    size_hint: (0.4, None)
                    size: (320, 20)
                    pos_hint: {'center_x':.5}
                    md_bg_color:1,20/255,147/255,1
                    on_release:
                        root.manager.current= "home"









