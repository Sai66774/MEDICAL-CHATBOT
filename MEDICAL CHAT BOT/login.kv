#: import Window kivy.core.window.Window

LogIn:
<LogIn>:
    name: "login"
    md_bg_color: [255/255,255/255,255/255,1]
    MDCard:
        orientation: "vertical"
        size_hint:None,None
        size:620,700
        pos_hint: {"center_x":.5,"center_y":.5}
        md_bg_color:[150/255,200/255,100/255,1]
        elevation:10
        padding: 20
        spacing: 30
        MDLabel:
            text: "Login"
            font_style: "Button"
            font_size: 45
            halign:"center"
            size_hint_y: None
            height: self.texture_size[1]
            spacing: 100
        MDTextField:
            id: phone
            hint_text:"Enter Phone no"
            icon_left: "phone"
            size_hint_x:None
            width: 420
            pos_hint: {'center_x':.5}
            font_size: 40
            input_type: 'number'
            input_filter: 'int'
        MDGridLayout:
            cols:2
            pos_hint: {'center_x':.5}
            size_hint_y:.75
            padding:[dp(45),dp(5),dp(15),dp(35)]
            MDTextField:
                id: text_field
                size_hint_x:None
                width: 400
                hint_text:"Password"
                password: True
                icon_left: "key-variant"
                pos_hint: {'center_x':.5}
            MDIconButton:
                icon: "eye-off"
                pos_hint: {"center_y": .5}
                pos: text_field.width - self.width + dp(8), 0
                theme_text_color: "Hint"
                on_release:
                    self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                    text_field.password = False if text_field.password is True else True
        MDLabel:
            id: invisible
            text: ""
            font_style: "Button"
            font_size: 20
            halign:"center"
            size_hint_y: None
            height: self.texture_size[1]
            spacing: 100
            md_bg_color:[1,1,1,1]
        MDGridLayout:
            size_hint_y:.75
            cols:2
            padding:[dp(15),dp(15),dp(15),dp(35)]
            spacing:dp(10)
            MDFillRoundFlatButton:
                id: submit
                text: "Submit"
                size_hint: (0.4, None)
                size: (320, 20)
                pos_hint: {'center_x':.5}
                md_bg_color:1,20/255,147/255,1
                padding: 10
                on_release:
                    root.verify(phone.text,text_field.text)
            MDFillRoundFlatButton:
                text: "Back"
                size_hint: (0.4, None)
                size: (320, 20)
                pos_hint: {'center_x':.5}
                md_bg_color:1,20/255,147/255,1
                on_release:
                    root.manager.current= "start_page"







